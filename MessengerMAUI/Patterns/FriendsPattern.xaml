<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerMAUI.Patterns.FriendsPattern">
    <Grid HeightRequest="60">
        <Rectangle Fill="#303030" RadiusX="10" RadiusY="10" />
        <Grid Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="0" Margin="0, 0, 0, 0" IsVisible="true" HorizontalOptions="Start"  RadiusX="10" RadiusY="10" x:Name="OnlineStatus" Fill="Green" WidthRequest="20" HeightRequest="20"/>
            <Label Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" x:Name="FriendNameLabel" Text="Кузьмин Дмитрий" TextColor="White" FontAttributes="Bold" FontSize="19" FontFamily="Lato"/>
            <Button Grid.Column="2" HorizontalOptions="End" ImageSource="start_chat_with_person.png" BackgroundColor="#303030" />
            <Button Grid.Column="3" HorizontalOptions="End" ImageSource="delete_friend.png" BackgroundColor="#303030"/>
        </Grid>
    </Grid>
</ContentView>

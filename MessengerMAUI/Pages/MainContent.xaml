<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerMAUI.MainContent">
    <Grid x:Name="MainGrid" Padding="5" BackgroundColor="#161719">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#2F2F2F" Grid.Column="1"/>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="84"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid HorizontalOptions="Start" Grid.Column="0" Padding="8">
                    <Rectangle RadiusX="30" RadiusY="30" HorizontalOptions="Center" WidthRequest="84" HeightRequest="84" Fill="#303030"/>
                    <Rectangle RadiusX="20" RadiusY="20" HorizontalOptions="Center" WidthRequest="64" HeightRequest="64" Fill="#D7A700" x:Name="UserIcon"/>
                    <Label Text="РС" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" MaximumHeightRequest="64" FontSize="20" MaximumWidthRequest="64" FontAttributes="Bold" x:Name="Initials" />
                </Grid>
                <Grid HorizontalOptions="End" Grid.Column="1" Padding="8">
                    <Button x:Name="FriendButton" Clicked="ClickedFriendButton" Background="#161719" ImageSource="people_icon.png"  WidthRequest="50" HeightRequest="50" Padding="10,10,0,10"/>
                </Grid>
            </Grid>
            <Grid x:Name="ListOfChats" Grid.Row="1">
                <!--Список чатов-->
            </Grid>
        </Grid>
        <Grid x:Name="ContentGrid" Grid.Column="2">
            <!--Место для контента (чат, список друзей, настройки, админ панель...)-->
        </Grid>
    </Grid>
</ContentView>
